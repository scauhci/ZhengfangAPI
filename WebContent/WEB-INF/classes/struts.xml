<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="default" extends="json-default" namespace="/">

		<action name="login" class="controller.MainAction" method="login">
			<result name="showStudentInfo" type="json">
				<param name="root">studentInfoJson</param>
			</result>
			<result name="error">/error.jsp</result>
		</action>

		<action name="index" class="controller.MainAction" method="index">
			<result name="index">/index.jsp</result>
		</action>

		<action name="getCheckCodeImage" class="controller.MainAction"
			method="getCheckCodeImage">
			<result name="showCheckCodeImage" type="stream">
				<param name="contentType">image/gif</param>
				<param name="inputName">inputStream</param>
			</result>
		</action>

		<action name="getStudentInfo" class="controller.MainAction"
			method="getStudentInfo">
			<result name="showStudentInfo" type="json">
				<param name="root">studentInfoJson</param>
			</result>
		</action>

		<action name="getTimeTable" class="controller.MainAction"
			method="getTimeTable">
			<result name="showTimeTable" type="json">
				<param name="root">timeTableJson</param>
			</result>
		</action>

		<action name="getReportCard" class="controller.MainAction"
			method="getReportCard">
			<result name="showReportCard" type="json">
				<param name="root">reportCardJson</param>
			</result>
		</action>

	</package>
</struts>